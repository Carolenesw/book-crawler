        <h3>Find books with just one click! </h2>

            <div class="row">
                <form class="col s12" action="">
                    <div class="row">
                        <div class="input-field col s4">
                            <input type="text" name="user-name" id="book-search" class="validate"
                                placeholder="title or author">
                            <label class="active searchBar" for="book-search">Search for Books here:</label>
                        </div>
                    </div>

                    <div class="row">
                        <div id="submitBook" class="input-field col s4 ">
                            <button class="waves-effect waves-light btn" type="submit"><a href="">Search</a></button>
                        </div>
                    </div>
                </form>
            </div>

