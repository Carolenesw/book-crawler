<div class="background-img">
    <div class="main-container">
        <h3>Find books with just one click!</h3>
        <div class="row">
            <form class="col s12">
                <div class="row">
                    <div class="input-field col s4">
                        <input type="text" id="book-search" class="validate" placeholder="title or author">
                        <label class="active searchBar" for="book-search">Search for Books here:</label>
                    </div>
                </div>
                <div class="row">
                    <div id="submitBook" class="input-field col s4 ">
                        <button class="waves-effect waves-light btn" type="submit">Search</button>
                    </div>
                </div>
            </form>
        </div>
        <h4>Book Selection:</h4>
        <div class="5">
            {{!-- loop throug books array --}}
            <div class="row bookList">
                {{#each books}}
                <div class="col mr3 books_return">
                    <div class="row">
                        <div class="input-field col col s4"></div>
                        <div class="card blue-grey darken-1">
                            <div class="card-content white-text center">
                                <span class="card-title">{{this.volumeInfo.title}}</span>
                                {{#each this.volumeInfo.authors}}
                                <p>{{this}}</p>
                                {{/each}}

                             
                                {{#each this.searchInfo.textSnippet}}
                                <p>{{this}}</p>
                                {{/each}}
                               
                                {{!-- <img class="booksImg" src="{{img}}" alt="{{book_title}}">
                            </div>
                            <div class="card-action">
                                {{!-- <a href="{{book_url}}">Preview the book</a> --}}
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>